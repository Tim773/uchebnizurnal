<Application x:Class="uteba.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:uteba"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <Style x:Key="Label" TargetType="Label">
            <Setter Property="Foreground" Value="BurlyWood"/>
            <Setter Property="FontSize" Value="25"/>
            <Setter Property="Margin" Value="71,0"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="VerticalAlignment" Value="Bottom"/>


        </Style>
        <Style x:Key="txt_box" TargetType="TextBox">
            <Setter Property="Height" Value="50"/>
            <Setter Property="Width" Value="250"/>
            <Setter Property="FontSize" Value="30"/>

        </Style>
        <Style x:Key="psw_box" TargetType="PasswordBox">
            <Setter Property="Height" Value="50"/>
            <Setter Property="Width" Value="250"/>
            <Setter Property="FontSize" Value="30"/>

        </Style>
    </Application.Resources>
</Application>
